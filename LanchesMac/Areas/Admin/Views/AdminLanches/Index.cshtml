@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Lanche>

@{
    ViewData["Title"] = "Index";
}

<h3>Produtos</h3>

<form method="get" class="form-inline">
    <table class="table table-responsive-md">
        <tr>
            <td class="col-1">
                <input name="filter" class="form-control" placeholder="filtro" value="@Model.RouteValue["Filter"]" />
            </td>
            <td class="col-3">
                <button type="submit" class="btn btn-primary">Procurar</button>
            </td>
        </tr>
    </table>
</form>

Total de Pedidos : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Lanche</a>
</p>
<div class="row">
    <div>
        <table class="table table-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>                   
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>                   
                    <th>
                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoCurta)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmEstoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td>
                        <td class="col-md-3">
                            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.LancheId">Editar</a>
                            <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.LancheId">Detalhes</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.LancheId">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
