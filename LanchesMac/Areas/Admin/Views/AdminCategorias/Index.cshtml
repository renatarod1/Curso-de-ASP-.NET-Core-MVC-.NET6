@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h3>Categorias</h3>
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Nova Categoria</a>
</p>
<table class="table table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td class="col-md-3">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CategoriaId">Editar</a>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.CategoriaId">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.CategoriaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
